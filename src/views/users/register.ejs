<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
 
        <main class="container">
          <section class="row">
            <div class="col-12 col-md-10 col-lg-6 mx-auto my-5 p-4"
            style="background-color: rgba(255, 255, 255, 0.7); box-shadow:gray 5px 5px 10px;"
            >
              <h4 class="">Registrate</h4>
              <hr>
          
            <form action="" class="row" method="POST">
              <div class="col-12 col-md-6 mb-3">
                <label class="form-label" for="firstName">Nombre*</label>
                
                <input type="text" name="firstName"
                      class="form-control <%= locals.errors && errors.firstName ? 'is-invalid' : null %>" id="name"
                      value="<%= locals.old && old.firstName ? old.firstName : null %>" />
                    <small class="text-danger ms-2" id="error-name">
                      <%= locals.errors && errors.firstName ? errors.firstName.msg : null %>
                    </small>
              </div>

              <div class="col-12 col-md-6 mb-3">
                <label class="form-label" for="lastName">Apellido*</label>
                <input
                  class="form-control"
                  type="text"
                  id="lastName"
                  name="lastName"
          
                      class="form-control <%= locals.errors && errors.lastName ? 'is-invalid' : null %>" id="lastName"
                      value="<%= locals.old && old.lastName ? old.lastName : null %>" />
                    <small class="text-danger ms-2" id="error-name">
                      <%= locals.errors && errors.lastName ? errors.lastName.msg : null %>
                    </small>
              </div>

              <div class="col-12 col-md-6 mb-3">
                <label for="email" class="form-label">Correo electrónico</label>
                    <input type="email" name="email"
                      class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" id="email"
                      placeholder="name@example.com" value="<%= locals.old && old.email ? old.email : null %>" />
                    <small class="text-danger ms-2" id="error-email">
                      <%= locals.errors && errors.email ? errors.email.msg : null %>
                    </small>
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <div class="input-group">
                    <input type="password" name="password"
                      class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>"
                      id="password" />
                      <span class="input-group-text"><i id="button-eye" class="fa fa-eye"></i></span>
                    </div>
                    <small class="text-danger ms-2" id="error-password">
                      <%= locals.errors && errors.password ? errors.password.msg : null %>
                    </small>
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <label for="passwordConfirm" class="form-label">Confirmar contraseña</label>
                    <input type="password" name="passwordConfirm"
                      class="form-control <%= locals.errors && errors.passwordConfirm ? 'is-invalid' : null %>"
                      id="passwordConfirm" />

                    <small class="text-danger ms-2" id="error-passwordConfirm">
                      <%= locals.errors && errors.passwordConfirm ? errors.passwordConfirm.msg : null %>
                    </small>
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="remember" name="remember" />
                      <label class="form-check-label" for="remember">
                        Acepto <a href="" class="link-dark" data-bs-toggle="modal"
                          data-bs-target="#exampleModal">términos y condiciones
                        </a> </label>
                    </div>
                    <small class="text-danger ms-2" id="error-remember">
                      <%= locals.errors && errors.remember ? errors.remember.msg : null %>
                    </small>
                  </div>

              <div class="d-flex flex-column flex-md-row justify-content-between">
                <p>¿Ya estás registrado? <a href="/users/login">Login</a></p>

                <button class="btn btn-dark">REGISTRATE</button>
              </div>
              
                

                
            
            </form>
          </div>


        </section>

        
        </main> 
        
      </div>   
</body>
</html>
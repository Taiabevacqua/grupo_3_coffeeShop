<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head',{title: "Detalle" }) %>


<body >


        <%- include('../partials/header') %>

    <main class="container"> 
      <section class="row">
      <div class="col-12 col-lg-10 mx-auto my-4">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column flex-md-row justify-content-between">
              <p class="casita-p"><%= name %></p>
              <h3 class="fs-2 casita-p">$<%= price %></h3>
            </div>
            <hr>
            
            <div class="row">

              <div class="col-11 col-md-6 col-lg-4 mx-auto">
                <img src="/img/<%= image %>" alt="Nombre del Producto">
              </div>
              <div class="col-12 col-md-6 col-lg-8">
                <div class="product_container-arti">
                  <p class="product_container-arti">
                    <%= description %>
                  </p>
                  
                </div>
                <ul class="list-group list-group-flush product_container-arti text-secondary mt-5">
                  <li class="list-group-item product_container-arti text-secondary">ORIGEN: <b><%= origin.country %></b></li>
                  <li class="list-group-item product_container-arti text-secondary">SABOR: <b><%= flavor.name %></b></li>

                </ul>
                <div class="d-flex justify-content-end">
                  <button class="button_A" onclick="addToCart('<%=id%>','<%=name%>','<%=price%>','<%=image%>')">Agregar al Carrito</button>
                </div>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </section>
      </main>
      
<%- include('../partials/footer.ejs') %>
</body>

</html>
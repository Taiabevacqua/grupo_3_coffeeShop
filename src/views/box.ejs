<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head', {title: 'Coffee Capsule Box' }) %>

  <body>
    <%- include('./partials/header')%>

  <main class="container">
    <div class="row my-4">
      <div class="col-12  mx-auto">
        <div class="card mb-3">
          <div class="card-body">
            <p class="casita-p">Coffee Capsule Box</p>
            <hr>
            <div class="row">
              <div class="col-12 col-lg-8">
                <div class="border p-2">
                    <h5 class="text-secondary">Elige los sabores de tu preferencia</h5>

                  
                  <hr>
              
                <div class="d-flex flex-wrap justify-content-center gap-2">
                  <% products.forEach(({id, name, image}) => { %>
                   <div style="width: 150px;" class="d-flex flex-column align-items-center">
                    <img class="img-fluid img-box" src="/img/<%= image %>" alt="" style="cursor: pointer;" onclick="addCapsule('<%=id%>','<%=image%>')">
                    <p style="color: brown;" class="text-center"><%= name %></p>
                   </div>
                  <% }) %>
                  <style>
                    .img-box:hover {
                      transition: all 0.5s ease;
                      transform: scale(1.1);
                    }
                  </style>
                </div>
              </div>
            </div>
              <div class="col-12 col-lg-4">
                <div class="border p-2">
                    <h5 class="text-secondary">Tu Coffe Capsule Box</h5>
                    
                    

                  <hr>
                  <div class="d-flex justify-content-center gap-3">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" value="" id="x6" name="quantity-box" checked>
                      <label class="form-check-label" for="x6">
                        6 cápsulas
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" value="" id="x12" name="quantity-box">
                      <label class="form-check-label" for="x12">
                        12 cápsulas
                      </label>
                    </div>
                  </div>
                  <div style="width: 100%; column-gap: 40px;" class="d-flex align-items-center  flex-wrap" id="box-capsule">
                    
                    
                  </div>
                  <div class="d-flex justify-content-center gap-3 w-100">
                    <button class="btn btn-sm btn-danger" id="btn-empty" style="display: none;" onclick="emptyBox()"><i class="fas fa-trash-can"></i> Vaciar Box</button>
                    <button class="btn btn-sm btn-success" id="btn-cart" style="display: none;" onclick="addBoxToCart()"><i class="fas fa-cart-plus"></i> Agregar al carrito</button>
                  </div>
                </div>
                
              </div>

            </div>
          </div>
        </div>
      </div>
    
    </div>
   

      

  </main>

    <%- include('./partials/footer.ejs') %>

   <script src="/javascripts/box.js"></script>

  </body>

</html>
<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head',{title }) %>
    <style>
        .hover-overlay:hover {
            transform: scale(1.1);
            transition: all 0.3s ease-in-out;
        }
    </style>
    <link rel="icon" type="image/x-icon" href="/img/fondo-accesorios-cafe.PNG">

    <body>
        <%- include('./partials/header') %>
            <main class="container">
                <h2 style="color: #991D1F; background-color: rgba(255, 255, 255, 0.4);" class="my-4 p-3 shadow">
                    <%= title %>
                    <hr>
                </h2>
                <div class="row my-4">
                    <% if (products.length) { %>
                     
                  
                    <% products.forEach(({id, name, image, price})=> { %>
                        <div class="col-12 col-md-4 col-lg-3 mb-3">
                            <div class="card shadow" style="height: 420px;">
                                <a href="/products/productDetail/<%= id %>">
                                    <img src="/img/<%= image %>" class="card-img-top  hover-overlay" alt="...">
                                </a>
                                
                                <div class="card-body d-flex flex-column justify-content-between" style="height: 50%;">
                                    <hr>
                                        <h5 class="card-title">
                                            <%= name %>
                                        </h5>
                                            <button 
                                                style="padding: 10px; justify-self: flex-end; background-color: #991D1F; color: white;" 
                                                class="btnbtn-sm"
                                                onclick="addToCart('<%=id%>','<%=name%>','<%=price%>','<%=image%>')"
                                            >
                                            Agregar al carrito
                                        </button>


                                </div>


                            </div>
                        </div>
                        <% }) %>
                        <% }else{ %>
                            <div class="p-3">
                                <p class="alert alert-warning">La búsqueda no arrojó ningún resultado</p>
                            </div>
                            
                        <% } %>

                </div>





            </main>
    </body>

    <%- include('./partials/footer.ejs') %>

</html>
<header class="header">
  <section class="header__datos">

     <div class="header__datos__tel">
        <i class="fa-solid fa-phone"></i>
        <h4>54 911 1234-5678</h4>
     </div>

     <div class="header__datos__email">
        <i class="fa-solid fa-envelope"></i>
        <h4>info@cafeinatopia.com</h4>
     </div>

     <div class="header__datos__sucursales">
        <i class="fa-solid fa-store"></i>
        <h4>Sucursales</h4>
     </div>

  </section>

  <section class="header__menu">

     <a href="" class="header__bars"><i class="fa fa-bars"></i></a>
     <a href="/" class="header__logo">
        <img class="header__logo__img" src="/img/Logo-Cafeinatopia-1.png" alt="logo-cafeinatopia">
     </a>


     <nav class="header__nav">

        <ul>
           <li><a href="/cafe-molido">Café Molido</a></li>
           <li><a href="/capsulas">Cápsulas</a></li>
           <li><a href="/cafeteras">Cafeteras</a></li>
           <li><a href="/complementos">Complementos</a></li>
           <li><a href="/dashboard">Dashboard</a></li>
        </ul>

     </nav>

     <div class="search-bar">
        <input id="input" type="text">
        <button type="submit"><i class="fas fa-search"></i></button>
     </div>

     <div class="header__iconos">
        <div>
           <i id="lupa-mobile" class="fa-solid fa-magnifying-glass"></i>
        </div>
        <% if (locals.userLogin) { %>
           <div class="user">
              <a href="/users/perfil"><i class="fa-solid fa-address-card"></i></a>
           </div>
           <div class="user">
              <a href="/users/salir"><i class="fa-solid fa-sign-out"></i></a>
           </div>
           <% }else{ %>
              <div class="user">
                 <a href="/users/login"><i class="fa-solid fa-user"></i></i></a>
              </div>

              <div class="cart">
                 <a href="/productCart"><i class="fa-solid fa-cart-shopping"></i></a>
              </div>
              <% } %>
     </div>

  </section>


</header>